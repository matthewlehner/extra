<%= form_tag session_url(@conn, :create), method: "post" do %>
  <div class="form-group">
    <%= label :session, :email %>
    <%= email_input :session, :email %>
  </div>

  <div class="form-group">
    <%= label :session, :password %>
    <%= password_input :session, :password %>
  </div>

  <div class="form-group">
    <%= submit "Sign In", class: "button" %>
  </div>
<% end %>
